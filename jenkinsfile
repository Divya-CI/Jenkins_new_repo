pipeline{
  agent any
  stages('Build') {
     steps {
      bat 'echo Building the application..'
      }
    }
    
    stage ('Test') {
        steps {
            bat 'echo running unit tests...'
            }
          }
          
          stage ('Deploy')
            steps{
              bat 'echo deploying the application..'
             }
           }
         }
       }
